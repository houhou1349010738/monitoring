<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    >
    <CheckBox
        android:id="@+id/check_danwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:focusable="false"
        android:enabled="false"
        />
    <ImageView
        android:id="@+id/iv_item_multi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base11dp"
        android:layout_marginLeft="@dimen/base11dp"
        android:layout_marginBottom="@dimen/base11dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/check_danwei"
        />
    <TextView
        android:textAppearance="?android:textAppearanceMedium"
        android:id="@+id/tv_ExlistView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/base13dp"
        android:layout_marginLeft="@dimen/base17dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/iv_item_multi"
        />
    <ImageButton
        android:id="@+id/item_pull"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base10dp"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:checked="true"
        android:focusable="false"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
      <ImageView
          android:layout_marginTop="@dimen/base11dp"
          android:layout_marginLeft="@dimen/base11dp"
          android:layout_marginBottom="@dimen/base11dp"
          android:id="@+id/menu_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          />
      <TextView
          android:id="@+id/tv"
          android:layout_toRightOf="@id/menu_image"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="@dimen/base13dp"
          android:layout_marginLeft="@dimen/base17dp"
          android:layout_centerVertical="true"
          />
    <ImageView
        android:id="@+id/image_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/menu_next"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base10dp"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
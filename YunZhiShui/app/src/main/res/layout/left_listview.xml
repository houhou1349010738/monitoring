<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fram"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian"
        android:layout_marginTop="@dimen/base10dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/base42dp"
        android:background="#ffffff"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base20dp"
            android:drawableLeft="@drawable/menu_whole"
            android:text="全部"
            android:textColor="#333333"
            android:textSize="@dimen/base13dp"
            android:layout_marginLeft="@dimen/base10dp"
            android:drawablePadding="@dimen/base8dp"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian"
        />
      <ListView
          android:id="@+id/list_menu"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content">
      </ListView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/base173dp"
    android:descendantFocusability="blocksDescendants"
    >
   <TextView
       android:id="@+id/tvv1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="工单名称:"
       android:textColor="#000000"
       android:textSize="@dimen/base15dp"
       android:layout_marginTop="@dimen/base16dp"
       android:layout_marginLeft="@dimen/base11dp"
       />
    <TextView
        android:id="@+id/tv_shebei_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水泵维修"
        android:layout_toRightOf="@id/tvv1"
        android:textColor="#12b7f5"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base16dp"
        android:layout_marginLeft="@dimen/base8dp"
        />
    <TextView
        android:id="@+id/tv_weixiu_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6月"
        android:textSize="@dimen/base15dp"
        android:textColor="#000000"
        android:layout_marginLeft="@dimen/base93dp"
        android:layout_marginTop="@dimen/base16dp"
        android:layout_toRightOf="@id/tv_shebei_name"
        />
    <TextView
        android:id="@+id/button_weixiu_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base16dp"
        android:gravity="center"
        android:text="部分完成"
        android:textSize="@dimen/base15dp"
        android:textColor="#4cd964"
        android:layout_marginRight="@dimen/base16dp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/tv_workdan_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工单名称:李公公"
        android:layout_below="@id/tvv1"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <Button
        android:id="@+id/but_paifa"
        android:layout_width="@dimen/base60dp"
        android:layout_height="@dimen/base25dp"
        android:background="#4cd964"
        android:text="派发"
        android:textColor="#ffffff"
        android:textSize="@dimen/base20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button_weixiu_state"
        android:layout_marginRight="@dimen/base8dp"
        android:gravity="center"
        android:layout_marginTop="@dimen/base20dp"

        />
    <ImageButton
        android:id="@+id/but_write"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/but_paifa"
        android:layout_marginTop="@dimen/base25dp"
        android:layout_marginRight="@dimen/base20dp"
        android:background="@drawable/write_select"

        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tv_jihua_starttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划开始时间:2016-09-08"
        android:layout_below="@id/tv_workdan_name"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_jihua_endtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="计划结束时间:2016-12-08"
        android:layout_below="@id/tv_jihua_starttime"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_shishi_danwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实施单位:机械维修处理部"
        android:layout_below="@id/tv_jihua_endtime"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_shishi_danwei"
        android:layout_marginTop="@dimen/base1dp"
        />
</RelativeLayout>
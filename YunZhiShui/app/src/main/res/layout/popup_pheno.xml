<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7f000000"
   >
    <RelativeLayout
        android:id="@+id/tl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        >
    <TextView
        android:id="@+id/tvii"
        android:layout_width="match_parent"
        android:layout_height="@dimen/base34dp"
        android:background="#f2f2f2"
        android:text="搜索条件"
        android:paddingLeft="@dimen/base11dp"
        android:layout_below="@id/inc"
        android:gravity="center_vertical"
        android:textSize="@dimen/base13dp"
        android:textColor="#333333"
        />
       <TextView
         android:id="@+id/tv_ledger_sbname"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="故障现象"
         android:textColor="#000000"
         android:textSize="@dimen/base15dp"
           android:layout_below="@id/tvii"
         android:layout_marginTop="@dimen/base18dp"
         android:layout_marginLeft="@dimen/base30dp"
        />
      <EditText
        android:id="@+id/ed_ledger_sbname"
        style="@style/edit2"
        android:layout_width="@dimen/base250dp"
        android:layout_height="@dimen/base27dp"
        android:layout_toRightOf="@id/tv_ledger_sbname"
        android:layout_marginTop="@dimen/base14dp"
          android:layout_below="@id/tvii"
        android:layout_marginLeft="@dimen/base14dp"
          android:hint="请输入故障现象"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base4dp"
            android:layout_below="@+id/ed_ledger_sbname"
            android:background="@drawable/xian2"
            />
    <TextView
        android:id="@+id/tv_ledger_sbleibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故障类别"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_below="@id/tv_ledger_sbname"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_marginLeft="@dimen/base30dp"
        />
    <EditText
        android:id="@+id/ed_ledger_sbleibie"
        style="@style/edit2"
        android:layout_width="@dimen/base250dp"
        android:layout_height="@dimen/base27dp"
        android:layout_toRightOf="@id/tv_ledger_sbleibie"
        android:layout_marginTop="@dimen/base14dp"
        android:layout_below="@id/tv_ledger_sbname"
        android:layout_marginLeft="@dimen/base14dp"
        android:hint="请选择故障类别"
        android:editable="false"
        />
    <ImageButton
        android:id="@+id/image_ledger_sbleibie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/xiang"
        android:layout_toRightOf="@id/tv_ledger_sbleibie"
        android:layout_below="@id/tv_ledger_sbname"
        android:layout_marginTop="@dimen/base25dp"
        android:layout_marginLeft="@dimen/base240dp"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base4dp"
            android:layout_below="@+id/ed_ledger_sbleibie"
            android:background="@drawable/xian2"
            />
    <TextView
        android:id="@+id/tv_ledger_danwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="故障部位"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_below="@id/tv_ledger_sbleibie"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_marginLeft="@dimen/base30dp"
        />
    <EditText
        android:id="@+id/ed_ledger_danwei"
        style="@style/edit2"
        android:layout_width="@dimen/base250dp"
        android:layout_height="@dimen/base27dp"
        android:layout_toRightOf="@id/tv_ledger_danwei"
        android:layout_marginTop="@dimen/base14dp"
        android:layout_below="@id/tv_ledger_sbleibie"
        android:layout_marginLeft="@dimen/base14dp"
        android:editable="false"
        android:hint="请选择故障类别"
        />
    <ImageButton
        android:id="@+id/image_ledger_danwei"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base25dp"
        android:layout_marginLeft="@dimen/base240dp"
        android:background="@drawable/xiang"
        android:layout_toRightOf="@id/tv_ledger_danwei"
        android:layout_below="@id/tv_ledger_sbleibie"
        />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base4dp"
            android:layout_below="@+id/ed_ledger_danwei"
            android:background="@drawable/xian2"
            />
   <Button
       android:id="@+id/but_ledger_search"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:textColor="#ffffff"
       android:background="@drawable/login_select_pressed"
       android:textSize="@dimen/base16dp"
       android:text="查询"
       android:layout_marginTop="@dimen/base35dp"
       android:layout_below="@id/tv_ledger_danwei"
       android:layout_centerInParent="true"
    />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/base11dp"
            android:layout_below="@+id/but_ledger_search"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_ledgerser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tl"
        />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/tv_ledger_bianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号:0000123"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base16dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_ledger_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="运行"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base10dp"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base16dp"
        />
    <ImageView
        android:id="@+id/ivvv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/xian2"
        android:layout_below="@id/tv_ledger_bianhao"
        android:layout_marginTop="@dimen/base10dp"
        />
    <TextView
        android:id="@+id/tv_ledger_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称:9#消化池排泥泵"
        android:layout_below="@id/ivvv"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base18dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_ledger_xinghao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="型号:WQD9-7-0.37-RS"
        android:layout_below="@id/tv_ledger_name"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_ledger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="水泵"
        android:layout_below="@id/tv_ledger_name"
        android:textColor="#ff8200"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/base35dp"
        />
    <TextView
        android:id="@+id/tv_ledger_zcbh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资产编号:3301083452"
        android:layout_below="@id/tv_ledger_xinghao"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:id="@+id/tv_ledger_sydw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="使用单位:高碑店污水处理厂"
        android:layout_below="@id/tv_ledger_zcbh"
        android:textColor="#000000"
        android:textSize="@dimen/base15dp"
        android:layout_marginTop="@dimen/base10dp"
        android:layout_marginLeft="@dimen/base11dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_ledger_sydw"
        android:layout_marginTop="@dimen/base1dp"
        />
</RelativeLayout>